<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
   <include layout="@layout/title_bar_1"/>
  <RelativeLayout
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/zxing"
        android:id="@+id/iv_zxing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/tellphone"
        android:id="@+id/iv_phone"
        android:layout_toRightOf="@+id/iv_zxing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/information"
        android:layout_toRightOf="@+id/iv_zxing"
        android:layout_below="@+id/iv_phone"
        android:id="@+id/iv_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </RelativeLayout>


</LinearLayout>